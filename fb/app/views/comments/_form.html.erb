<%= form_for Comment.new do |f| %>
  <%= f.hidden_field :post_id, :value => @post.id %>
  <%= content_tag(:span, profile_img_for(current_user), class: "img") %>
  <%= render "error_messages", object: f.object %>
  <%= f.text_field :content, size: "10x5", class: "form-control", placeholder: "Write your comment"%>
  <%= f.submit "Submit" %>
<% end %>
